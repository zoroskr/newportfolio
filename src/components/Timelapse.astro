---
const { title, description, lapse, invert } = Astro.props;
const invertP = `${invert ? "invertR" : "invertL"}`;
const trans = `${invert ? "tranR" : "tranL"}`;

---

<div
  class={`w-full h-full flex justify-center items-center flex-row-reverse ${invertP} animate-fadeIn`}
>
  <div
    class={`bg-transparent rounded-md border flex flex-col justify-center items-start dark:border-white border-black md:h-36 md:w-1/3 w-full h-full gap-4 p-6 overflow-hidden animate-fadeIn`}
  >
    <h4 class="font-medium">{title}</h4>
    <p class="font-bold">{description}</p>
    <h5 class="md:hidden">{lapse}</h5>
  </div>

  <div class="flex justify-center items-center m-10 mt-0 mb-0 w-auto">
    <ol class="relative w-1 bg-gray-700 md:h-52 h-80">
      <li class="mb-10 ms-6">
        <span
          class="absolute flex items-center justify-center w-12 h-12 rounded-full ring-8 text-white ring-gray-900 dark:ring-gray-700 bg-[#A657AE] top-20 right-[-1.38rem]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-school"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M22 9l-10 -4l-10 4l10 4l10 -4v6"></path><path
              d="M6 10.6v5.4a6 3 0 0 0 12 0v-5.4"></path></svg
          >
        </span>
      </li>
    </ol>
  </div>
  <div
    class={`h-full md:flex justify-start items-center w-1/3 hidden ${invertP}`}
  >
    <h5>{lapse}</h5>
  </div>
</div>

<style>
  @media (min-width: 768px) {
    .invertR {
      flex-direction: row;
    }
    .invertL {
      flex-direction: row-reverse;
    }
  }


</style>


